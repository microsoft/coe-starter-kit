                        },
                        "admin_approvalid": {
                          "type": "string"
                        },
                        "admin_archiveapprovalid": {
                          "type": "string"
                        },
                        "admin_name": {
                          "type": "string"
                        },
                        "createdon": {
                          "type": "string"
                        },
                        "modifiedon": {
                          "type": "string"
                        },
                        "statecode": {
                          "type": "integer"
                        },
                        "statuscode": {
