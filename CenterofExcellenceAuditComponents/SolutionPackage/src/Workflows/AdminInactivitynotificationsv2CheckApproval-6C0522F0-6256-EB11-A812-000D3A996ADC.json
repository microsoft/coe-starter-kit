                  "runAfter": {},
                  "metadata": {
                    "operationMetadataId": "b99567b7-f616-4588-b8f5-83a8636539db"
                  },
                  "type": "ParseJson",
                  "inputs": {
                    "content": "@first(body('Filter_Archive_Approval_to_get_current_item'))",
                    "schema": {
                      "properties": {
                        "@@odata.etag": {
