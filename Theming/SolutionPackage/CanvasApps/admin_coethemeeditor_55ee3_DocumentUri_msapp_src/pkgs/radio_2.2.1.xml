<widget xmlns="http://openajax.org/metadata" spec="1.0" id="http://microsoft.com/appmagic/radio" name="radio" jsClass="AppMagic.Controls.Radio" version="2.2.1" styleable="true" runtimeCost="1" xmlns:appMagic="http://schemas.microsoft.com/appMagic">
